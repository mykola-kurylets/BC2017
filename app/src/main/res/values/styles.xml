<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="DayModeBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="NightModeBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/main_left_padding</item>
        <item name="android:paddingRight">@dimen/main_right_padding</item>
    </style>


    <style name="CommonTextView">
        <item name="android:layout_width">@dimen/linlayout_element_width_</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize" >@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayModeTextView" parent="CommonTextView">
        <item name="android:textColor">@color/colorDayMode</item>
    </style>

    <style name="NightModeTextView" parent="CommonTextView">
        <item name="android:textColor">@color/colorNightMode</item>
    </style>


    <style name="CommonEditText">
        <item name="android:layout_width">@dimen/linlayout_element_width_</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/border_bottom_padding</item>
        <item name="android:paddingTop">@dimen/border_top_padding</item>
        <item name="android:paddingRight">@dimen/border_right_padding</item>
        <item name="android:layout_marginBottom">@dimen/distance_between_rows</item>
        <item name="android:text">@string/zero_value_integer</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="DayModeEditText" parent="CommonEditText">
        <item name="android:background">@drawable/day_output_border</item>
        <item name="android:textColor">@color/colorDayMode</item>
        <item name="android:textColorHint">@color/colorDayMode</item>
    </style>

    <style name="NightModeEditText" parent="CommonEditText">
        <item name="android:background">@drawable/night_output_border</item>
        <item name="android:textColor">@color/colorNightMode</item>
        <item name="android:textColorHint">@color/colorNightMode</item>
    </style>


    <style name="CommonSpinner">
        <item name="android:layout_width">@dimen/linlayout_element_width_</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="DayModeSpinner" parent="CommonSpinner">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="NightModeSpinner" parent="CommonSpinner">
        <item name="android:popupBackground">@color/black</item>
    </style>


    <style name="DayModeDivider">
        <item name="android:background">@color/colorDayMode</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
    </style>

    <style name="NightModeDivider">
        <item name="android:background">@color/colorNightMode</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
    </style>


    <style name="CommonTextViewOutValue">
        <item name="android:layout_width">@dimen/linlayout_element_width_</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/border_top_padding</item>
        <item name="android:paddingBottom">@dimen/border_bottom_padding</item>
        <item name="android:paddingRight">@dimen/border_right_padding</item>
        <item name="android:layout_marginBottom">@dimen/distance_between_rows</item>
        <item name="android:textSize" >@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="DayModeTextViewOutValue" parent="CommonTextViewOutValue">
        <item name="android:background">@drawable/day_output_border</item>
        <item name="android:textColor">@color/colorDayMode</item>
    </style>


    <style name="NightModeTextViewOutValue" parent="CommonTextViewOutValue">
        <item name="android:background">@drawable/night_output_border</item>
        <item name="android:textColor">@color/colorNightMode</item>
    </style>


    <style name="CommonButton">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginRight">@dimen/main_right_padding</item>

    </style>

    <style name="DayModeButton" parent="CommonButton">
        <item name="android:background">@color/colorDayMode</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NightModeButton" parent="CommonButton">
        <item name="android:background">@color/colorNightMode</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CommonDialogStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/title_padding</item>
        <item name="android:paddingBottom">@dimen/title_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DayDialogStyle" parent="CommonDialogStyle">
        <item name="android:background">@color/colorDayMode</item>
    </style>

    <style name="NightDialogStyle" parent="CommonDialogStyle">
        <item name="android:background">@color/colorNightMode</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
