<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DayModeBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="NightModeBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CommonTextView">
        <item name="android:layout_width">@dimen/linlayout_element_width_</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize" >@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayModeTextView" parent="CommonTextView">
        <item name="android:textColor">@color/colorDayMode</item>
    </style>

    <style name="NightModeTextView" parent="CommonTextView">
        <item name="android:textColor">@color/colorNightMode</item>
    </style>

    <style name="CommonEditText">
        <item name="android:layout_width">@dimen/linlayout_element_width_</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/edittext_bottom_padding</item>
        <item name="android:paddingTop">@dimen/edittext_top_padding</item>
        <item name="android:paddingRight">@dimen/edittext_right_padding</item>
        <item name="android:hint">@string/zero_value</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>


    <style name="DayModeEditText" parent="CommonEditText">
        <item name="android:background">@drawable/day_edit_text_border</item>
        <item name="android:textColor">@color/colorDayMode</item>
    </style>

    <style name="NightModeEditText" parent="CommonEditText">
        <item name="android:background">@drawable/night_edit_text_border</item>
        <item name="android:textColor">@color/colorNightMode</item>
    </style>

    <style name="DayModeDivider">
        <item name="android:background">@color/colorDayMode</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="NightModeDivider">
        <item name="android:background">@color/colorNightMode</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="CommonButton">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DayModeButton" parent="CommonButton">
        <item name="android:background">@color/colorDayMode</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NightModeButton" parent="CommonButton">
        <item name="android:background">@color/colorNightMode</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
